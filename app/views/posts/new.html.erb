<div class="col-md-12">
<h1>新規投稿フォーム</h1>
<%= form_for @post, url: { action: :create } do |f| %>
<div class="form-group">
<p>タイトル：<br>
  <%= f.text_field :title %>
</p>
</div>
<div class="form-group">
<p>カテゴリー：<br>
  <%= f.text_field :category %>
</p>
</div>
<div class="form-group">
<p>本文：<br>
  <%= f.text_area :body ,class:"form-control"%>
</p>
<%= f.submit "登録する",class:"btn btn-primary" %>
<%= link_to '戻る', posts_path,class:"btn btn-info" %>

<% end %>
</div>
